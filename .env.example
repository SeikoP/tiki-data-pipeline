# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_IMAGE_NAME=apache/airflow:3.1.2
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.
ENV_FILE_PATH=.env

# Airflow Web UI Credentials
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# ============================================
# Firecrawl API Configuration
# ============================================
# Ports
PORT=3002
INTERNAL_PORT=3002
EXTRACT_WORKER_PORT=3004
WORKER_PORT=3005

# Redis Configuration
REDIS_URL=redis://redis:6379/1
REDIS_RATE_LIMIT_URL=redis://redis:6379/1

# Playwright Service
PLAYWRIGHT_MICROSERVICE_URL=http://playwright-service:3000/scrape

# Database Configuration
NUQ_DATABASE_URL=postgres://postgres:postgres@postgres:5432/nuq
USE_DB_AUTHENTICATION=

# ============================================
# AI/LLM Configuration
# ============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
MODEL_NAME=gpt-4
MODEL_EMBEDDING_NAME=text-embedding-3-small

# Ollama (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# External Services (Optional)
# ============================================
# Slack Notifications
SLACK_WEBHOOK_URL=

# PostHog Analytics
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Supabase
SUPABASE_ANON_TOKEN=
SUPABASE_URL=
SUPABASE_SERVICE_TOKEN=

# Webhook
SELF_HOSTED_WEBHOOK_URL=

# Search APIs
SERPER_API_KEY=
SEARCHAPI_API_KEY=

# SearXNG
SEARXNG_ENDPOINT=
SEARXNG_ENGINES=
SEARXNG_CATEGORIES=

# ============================================
# Proxy Configuration (Optional)
# ============================================
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=

# ============================================
# Playwright Configuration
# ============================================
BLOCK_MEDIA=false

# ============================================
# Authentication & Security
# ============================================
BULL_AUTH_KEY=your_bull_auth_key_here
TEST_API_KEY=your_test_api_key_here

# ============================================
# Logging
# ============================================
LOGGING_LEVEL=info

# ============================================
# Additional Requirements (Optional)
# ============================================
_PIP_ADDITIONAL_REQUIREMENTS=
